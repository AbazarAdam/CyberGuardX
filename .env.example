# =============================================================================
# CyberGuardX — Environment Variables Template
# =============================================================================
# Copy this file to .env and customize for your environment
# Never commit .env to version control!

# ──────────────────────────────────────────────────────────────────────────────
# Database Configuration
# ──────────────────────────────────────────────────────────────────────────────
DATABASE_URL=sqlite:///./cyberguardx.db

# ──────────────────────────────────────────────────────────────────────────────
# Server Configuration
# ──────────────────────────────────────────────────────────────────────────────
BACKEND_PORT=8000
FRONTEND_PORT=3000

# ──────────────────────────────────────────────────────────────────────────────
# CORS Configuration (comma-separated origins)
# ──────────────────────────────────────────────────────────────────────────────
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ──────────────────────────────────────────────────────────────────────────────
# Logging Configuration
# ──────────────────────────────────────────────────────────────────────────────
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ──────────────────────────────────────────────────────────────────────────────
# Security Settings
# ──────────────────────────────────────────────────────────────────────────────
# Rate limit window for website scanner (in seconds)
RATE_LIMIT_WINDOW_SECONDS=600

# ──────────────────────────────────────────────────────────────────────────────
# API Keys (Optional - for external services)
# ──────────────────────────────────────────────────────────────────────────────
# HIBP_API_KEY=your_api_key_here
# (Currently using offline breach database - API key not required)

# ──────────────────────────────────────────────────────────────────────────────
# Development Settings
# ──────────────────────────────────────────────────────────────────────────────
DEBUG=False
# Set to True for development mode with auto-reload
